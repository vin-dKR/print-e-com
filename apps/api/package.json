{
  "name": "api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "openapi:generate": "bun scripts/generate-openapi.ts",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:generate": "bunx prisma generate --schema=prisma/schema.prisma",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "seed:printouts": "bun scripts/seed-printouts.ts",
    "seed:books": "bun scripts/seed-books.ts",
    "seed:photos": "bun scripts/seed-photos.ts",
    "seed:business-cards": "bun scripts/seed-business-cards.ts",
    "seed:letter-heads": "bun scripts/seed-letter-heads.ts",
    "seed:bill-books": "bun scripts/seed-bill-books.ts",
    "seed:pamphlets-brochures": "bun scripts/seed-pamphlets-brochures.ts",
    "seed:maps": "bun scripts/seed-maps.ts",
    "seed:reviews": "bun scripts/seed-reviews.ts",
    "seed:all": "bun scripts/seed-all.ts",
    "db:reset-seed": "bun scripts/reset-and-seed.ts",
    "db:clear-seed": "bun scripts/clear-and-seed.ts"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@repo/types": "*",
    "@supabase/supabase-js": "^2.87.1",
    "@types/pg": "^8.15.6",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "razorpay": "^2.9.6",
    "redoc-express": "^2.1.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.2",
    "@types/swagger-ui-express": "^4.1.8",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "prisma": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "typescript": "5.9.2"
  }
}
